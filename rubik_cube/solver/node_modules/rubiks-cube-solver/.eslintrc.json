{
	"env": {
		"es6": true,
		"node": true
	},
	"globals": {
		"it": true,
		"describe": true
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	},
  "parserOptions": {
    "sourceType": "module"
  }
}
